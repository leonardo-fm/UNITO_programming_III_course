    <children>
        <Label fx:id="errorLabel" disable="true" layoutX="25.0" layoutY="107.0" text="Error string here" textFill="RED" />
        <Label fx:id="usernameLabel" layoutX="40.0" layoutY="14.0" text="Select account" textAlignment="CENTER">
         <font>
            <Font size="30.0" />
         </font></Label>
        <TextField fx:id="usernameTextField" focusTraversable="false" layoutX="25.0" layoutY="82.0" prefHeight="25.0" prefWidth="211.0" promptText="mario.rossi@example.com" text="example@test.mail" />
        <Button fx:id="loginBtn" layoutX="95.0" layoutY="134.0" mnemonicParsing="false" onAction="#onLoginBtnClick" prefHeight="25.0" prefWidth="71.0" text="Login" />
    </children>
</Pane>
