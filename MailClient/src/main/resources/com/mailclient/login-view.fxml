<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mailclient.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
       <Label fx:id="errorLabel" text="Error string here" disable="true" />
       <Label fx:id="usernameLabel" text="Username" />
       <TextField fx:id="usernameTextField" text="example@edu.it" promptText="mario.rossi@example.com" />
       <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#onLoginBtnClick" text="Login" />
   </children>
</VBox>
